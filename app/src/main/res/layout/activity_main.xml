<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="vikingchess.userinterfacechapter3.MainActivity"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="700dp"
        android:orientation="vertical"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        android:layout_marginStart="7dp"
        android:layout_marginEnd="7dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="8dp"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="7dp"
        android:layout_marginRight="7dp">

        <TextView
            android:id="@+id/helloText"
            android:layout_width="wrap_content"
            android:layout_height="56dp"
            android:text="Hello Android! David Flom Chapter 3 Text Homework"
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            tools:layout_editor_absoluteY="88dp"
            tools:textSize="30sp"
            tools:ignore="MissingConstraints"
            app:layout_constraintHorizontal_bias="0.1" />

        <TextView
            android:id="@+id/emailText"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:text="davidflom01@gmail.com"
            android:autoLink="email"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="35dp"
            tools:text="davidflom01@gmail.com"
            tools:ignore="MissingConstraints" />

        <EditText
            android:id="@+id/favoriteAnimalText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Enter your favorite animal name"
            android:inputType="textPersonName"
            android:text="" />

        <AutoCompleteTextView
            android:id="@+id/continent"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:hint="Enter the continent where it is found"
            android:completionHint="Which Continent can you find your anilmal" />

        <MultiAutoCompleteTextView
            android:id="@+id/habitat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter the animals primary habitat"/>

        <Button
            android:id="@+id/continentButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Press to see your animals information" />

        <TextView
            android:id="@+id/answerTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="" />

    </LinearLayout>
</android.support.constraint.ConstraintLayout>
